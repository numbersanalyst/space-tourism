---
const currPath = Astro.url.pathname
---

<header class="fixed top-0 left-0 right-0 flex justify-between items-center md:py-7 shrink-0 font-condensed">
    <img class="mx-12 w-12 h-12" src="./shared/logo.svg" alt="close">
    <div class="sm:w-2/5 bg-white h-[1px] opacity-20 mr-[-20px] lg:mr-[-30px] z-10"></div>
    <nav class="md:w-3/5 md:min-w-[500px] w-fit px-7 backdrop-filter backdrop-blur-lg bg-opacity-[4%] h-[96px] flex justify-center gap-x-4 uppercase bg-white tracking-[2.7px]">
        <a href="./" class:list={["h-full flex items-center border-white transition-all", currPath == "/" ? "pt-1 border-b-4" : "hover:pt-1 hover:border-b-4 border-opacity-30"]}><b class="mr-2 hidden md:block">00</b> Home</a>
        <a href="./destination" class:list={["h-full flex items-center border-white transition-all", currPath == "/destination" ? "pt-1 border-b-4" : "hover:pt-1 hover:border-b-4 border-opacity-30"]}><b class="mr-2 hidden md:block">01</b> Destination</a>
        <a href="./crew" class:list={["h-full flex items-center border-white transition-all", currPath == "/crew" ? "pt-1 border-b-4" : "hover:pt-1 hover:border-b-4 border-opacity-30"]}><b class="mr-2 hidden md:block">02</b> Crew</a>
        <a href="./technology" class:list={["h-full flex items-center border-white transition-all", currPath == "/technology" ? "pt-1 border-b-4" : "hover:pt-1 hover:border-b-4 border-opacity-30"]}><b class="mr-2 hidden md:block">03</b> Technology</a>
    </nav>
    <div class="hidden sm:hidden tham tham-e-squeeze tham-w-6">
        <div class="tham-box">
            <div class="tham-inner"></div>
        </div>
    </div>
</header>

<script>
    const tham = document.querySelector(".tham");
    if (tham) {
        tham.addEventListener('click', () => {
        tham.classList.toggle('tham-active');
        });
    }
</script>
