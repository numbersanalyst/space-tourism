---
const currPath = Astro.url.pathname;

const navLinks = [
    { path: "/", label: "Home", number: "00" },
    { path: "/destination", label: "Destination", number: "01" },
    { path: "/crew", label: "Crew", number: "02" },
    { path: "/technology", label: "Technology", number: "03" },
];
---

<style>
    .active::after,
    .active-hover::after {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        height: 4px;
        background-color: white;
        transition: opacity .3s ease-in-out;
    }

    .active-hover::after {
        opacity: 0;
    }

    .active-hover:hover::after {
        opacity: .3;
    }
</style>

<header class="fixed top-0 left-0 right-0 flex justify-between items-center md:py-7 shrink-0 font-condensed">
    <img class="mx-12 w-12 h-12" src="./shared/logo.svg" alt="close">
    <div class="sm:w-2/5 bg-white h-[1px] opacity-20 mr-[-20px] lg:mr-[-30px] z-10"></div>
    <nav class="md:w-3/5 md:min-w-[500px] w-fit px-7 backdrop-filter backdrop-blur-lg bg-opacity-[4%] h-[96px] flex justify-center gap-x-4 uppercase bg-white tracking-[2.7px]">
        {navLinks.map(({ path, label, number }) => (
            <a 
                href={path}
                class:list={[
                    "h-full flex items-center border-white transition-all relative",
                    currPath === path 
                        ? "active" 
                        : "active-hover"
                ]}
            >
                <b class="mr-2 hidden md:block">{number}</b> {label}
            </a>
        ))}
    </nav>
    <div class="hidden sm:hidden tham tham-e-squeeze tham-w-6">
        <div class="tham-box">
            <div class="tham-inner"></div>
        </div>
    </div>
</header>

<script>
    const tham = document.querySelector(".tham");
    if (tham) {
        tham.addEventListener('click', () => {
        tham.classList.toggle('tham-active');
        });
    }
</script>
